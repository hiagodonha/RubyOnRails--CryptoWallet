<p style="color: green"><%= notice %></p>

<div class="col-lg-8">
    <h5>
       Coin
    </h5>
  <div class="card shadow mb-3">
    <div class="card-body">
      <%= render @coin %>
    </div>
  </div>
  <div class="mt-5">
      <%= link_to "Edit this coin", edit_coin_path(@coin), class: "btn btn-warning" %>
      <%= link_to "Back to coins", coins_path, class: "btn btn-outline-primary" %>

      <%= button_to "Destroy this coin", @coin, method: :delete, class: "btn btn-danger" %>
  </div>
</div>



